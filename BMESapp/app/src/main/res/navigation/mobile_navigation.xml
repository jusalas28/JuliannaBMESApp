<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.navdrawer.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_news"
        android:name="com.example.navdrawer.ui.news.NewsFragment"
        android:label="@string/menu_news" />

    <fragment
        android:id="@+id/nav_contacts"
        android:name="com.example.navdrawer.ui.contacts.ContactsFragment"
        android:label="@string/menu_contacts"
        tools:layout="@layout/fragment_contacts" />
    <fragment
        android:id="@+id/nav_calendar"
        android:name="com.example.navdrawer.ui.calendar.CalendarFragment"
        android:label="@string/menu_calendar"
        tools:layout="@layout/fragment_calendar" />
    <activity
        android:id="@+id/nav_sendemail"
        android:name="com.example.navdrawer.ui.SendEmail"
        android:label="Email"
        tools:layout="@layout/activity_send_email" />
</navigation>